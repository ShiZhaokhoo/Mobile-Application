<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MaterialAdapter"
        android:id="@+id/card_view_3"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#81C784"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3"
            android:padding="16dp">

            <TextView
                android:id="@+id/card_phone_no_title"
                android:layout_width="130dp"
                android:layout_height="27dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="12dp"
                android:text="Phone no. : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_name" />

            <TextView
                android:id="@+id/card_name"
                android:layout_width="170dp"
                android:layout_height="39dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/card_name_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_phone_no"
                android:layout_width="170dp"
                android:layout_height="39dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/card_name_title"
                app:layout_constraintTop_toBottomOf="@+id/card_name" />

            <TextView
                android:id="@+id/card_email"
                android:layout_width="170dp"
                android:layout_height="39dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/card_name_title"
                app:layout_constraintTop_toBottomOf="@+id/card_phone_no" />

            <TextView
                android:id="@+id/card_email_title"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="12dp"
                android:text="Email Address : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_phone_no" />

            <TextView
                android:id="@+id/card_name_title"
                android:layout_width="142dp"
                android:layout_height="27dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:text="Name : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_position_title"
                android:layout_width="190dp"
                android:layout_height="27dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="12dp"
                android:text="Position : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_email" />

            <TextView
                android:id="@+id/card_position"
                android:layout_width="170dp"
                android:layout_height="39dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/card_name_title"
                app:layout_constraintTop_toBottomOf="@+id/card_email" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>